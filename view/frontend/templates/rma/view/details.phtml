        <span class="title"><?= $block->escapeHtml(__('Resolution')) ?></span>
        <span class="value">
            <?= $block->escapeHtml(
                __(
                    '%1',
                    $viewModel->getFrontLabel('resolutions', $rma->getResolution())
                )
