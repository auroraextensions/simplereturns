<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">simplereturns_rma_grid.simplereturns_rma_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="simplereturns/rma/order_index"/>
                <class>primary</class>
                <label translate="true">Create RMA</label>
                <aclResource>AuroraExtensions_SimpleReturns::create</aclResource>
            </button>
        </buttons>
        <spinner>simplereturns_rma_grid_columns</spinner>
        <deps>
            <dep>simplereturns_rma_grid.simplereturns_rma_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="simplereturns_rma_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>AuroraExtensions_SimpleReturns::rma_request</aclResource>
        <dataProvider class="AuroraExtensions\SimpleReturns\Ui\DataProvider\Grid\Rma\DataProvider"
                      name="simplereturns_rma_grid_data_source">
            <settings>
                <primaryFieldName>rma_id</primaryFieldName>
                <requestFieldName>rma_id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="simplereturns_rma_grid_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">simplereturns_rma_grid.simplereturns_rma_grid.simplereturns_rma_grid_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">view</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="100">
            <settings>
                <indexField>rma_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="rma_id" sortOrder="200">
            <settings>
                <filter>text</filter>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="increment_id"
                class="AuroraExtensions\SimpleReturns\Ui\Component\Listing\Column\Order\IncrementId"
                sortOrder="300">
            <settings>
                <filter>text</filter>
                <label translate="true">Order</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="status" sortOrder="400">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="reason" sortOrder="500">
            <settings>
                <filter>text</filter>
                <label translate="true">Reason</label>
            </settings>
        </column>
        <column name="resolution" sortOrder="600">
            <settings>
                <filter>text</filter>
                <label translate="true">Resolution</label>
            </settings>
        </column>
        <column name="created_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date"
                sortOrder="700">
            <settings>
                <dataType>date</dataType>
                <filter>dateRange</filter>
                <label translate="true">Created</label>
            </settings>
        </column>
        <column name="updated_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date"
                sortOrder="800">
            <settings>
                <dataType>date</dataType>
                <filter>dateRange</filter>
                <label translate="true">Updated</label>
            </settings>
        </column>
        <actionsColumn name="actions"
                       class="AuroraExtensions\SimpleReturns\Ui\Component\Listing\Column\Rma\Actions"
                       sortOrder="900">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">simplereturns/rma/view</item>
                    <item name="editUrlPath" xsi:type="string">simplereturns/rma/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">rma_id</item>
                    <item name="urlSecretParamName" xsi:type="string">token</item>
                </item>
            </argument>
            <settings>
                <indexField>rma_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
