<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="AuroraExtensions_SimpleReturns::css/dropzone.css"/>
        <css src="AuroraExtensions_SimpleReturns::css/progress.css"/>
        <css src="AuroraExtensions_SimpleReturns::css/simplereturns.css"/>
    </head>
    <body>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="sidebar.additional" remove="true"/>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="simplereturns_rma_edit"
                   template="AuroraExtensions_SimpleReturns::rma/edit.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">AuroraExtensions\SimpleReturns\Model\ViewModel\Rma\EditView</argument>
                </arguments>
                <container name="simplereturns_rma_edit_before_fields" htmlTag="div" htmlClass="container"/>
                <container name="simplereturns_rma_edit_after_fields" htmlTag="div" htmlClass="container"/>
                <container name="simplereturns_rma_edit_after_media" htmlTag="div" htmlClass="container"/>
            </block>
        </referenceContainer>
    </body>
</page>
